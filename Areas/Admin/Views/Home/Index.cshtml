<script>    
    window.onload = function () {

        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,

            data: [{
                type: "doughnut",
                startAngle: 60,
                //innerRadius: 60,
                indexLabelFontSize: 17,
                indexLabel: "{label} - #percent%",
                toolTipContent: "<b>{label}:</b> {y} (#percent%)",
                dataPoints: [
                    { y: 100000000, label: "LapTop" },
                    { y: 30000000, label: "TV" },
                    { y: 40000000, label: "Điện Thoại" },
                    { y: 20000000, label: "Tablet" },
                    { y: 25000000, label: "Phụ kiện" },
                    { y: 6000000, label: "Tai nghe" }   
                ]
            }]
        });
        chart.render();

    }
</script>

